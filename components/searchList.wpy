<script>
  import wepy from 'wepy';
  export default class searchList extends wepy.component {
    props = {
      goods: {
        type: Object,
        default: {},
        twoWay: true
      },
      index: {
        type: String,
        default: '',
        twoWay: true
      }
    };
    data = {};
    events = {};
    methods = {
      // 商品详情
      toGoodDetailsTap(id) {
        console.log('id', id);
        this.$emit('goodDetail', id);
      },
      tobuy(id,index) {
        console.log('id', id);
        this.$emit('addShopCar2', id, index);
      },
      toshop(id) {
        wx.navigateTo({
          url: '/Shop/pages/index?suppliers_id=' + id
        });
      },
      numJiaTap(num) {
        this.$emit('numJiaTap1', this.goods, this.index, 1);
      },
      numJianTap(num) {
        this.$emit('numJianTap1', this.goods, this.index, 1);
      }
    };
    onLoad() {}
  }
</script>
