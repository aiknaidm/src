<script>
import wepy from 'wepy';
import api from '../API/api';
export default class Index extends wepy.page {
  config = {
    navigationBarTitleText: '吉采易站'
  };
  components = {};
  data = {
      yizhanBanner:[],
      yizhan:[]
  };
  computed = {};
  methods = {};
  events = {};
  // 广告
  async getShopIndex() {
    var res = await wepy.request({
      url: api.yizhanIndex
    });
    this.yizhanIndex = res.data.data;

    this.$apply();
  }
  async getShopBanner(userId,supplier_id="") {
    var res = await wepy.request({
      url: api.yizhanBanner,
      data: {
        userId: userId,
        supplier_id:supplier_id
      }
    });
    wx.hideLoading();
    this.yizhanBanner = res.data.data;
    this.yizhan = res.data.yizhan;
    this.$apply();
    console.log("yizhanBanner",this.yizhanBanner);
    console.log("yizhan",this.yizhan);
    
  }
  async onLoad() {
    var userId = await this.$parent.loginInfo();
    var userInfo=await this.$parent.getUserInfo(userId);
    this.getShopBanner(userId);
    wx.showLoading({
      title: '加载中...', //提示的内容,
      mask: true, //显示透明蒙层，防止触摸穿透,
      success: res => {}
    });
  }
}
</script>
